{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "js",
        "rootDir": "js"
    },
    "include": ["js/**/*"],
    "exclude": ["node_modules"]
} 